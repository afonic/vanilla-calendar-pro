{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./package/build/types",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@scripts/*": ["./package/src/scripts/*"],
      "@src/*": ["./package/src/*"],
      "@package/*": ["./package/*"],
      "@/*": ["./*"],
    }
  },
  "include": ["package/src/*.ts"],
  "exclude": ["node_modules"]
}
